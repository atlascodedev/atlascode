{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@atlascode/react-animations": ["libs/react/ui/animations/src/index.ts"],
      "@atlascode/react-components": ["libs/react/ui/components/src/index.ts"],
      "@atlascode/react-hoc": ["libs/react/data-access/hoc/src/index.ts"],
      "@atlascode/react-hooks": ["libs/react/data-access/hooks/src/index.ts"],
      "@atlascode/react-layouts": ["libs/react/features/layouts/src/index.ts"],
      "@atlascode/react-pages": ["libs/react/features/pages/src/index.ts"],
      "@atlascode/react-render-props": [
        "libs/react/data-access/render-props/src/index.ts"
      ],
      "@atlascode/react-sections": [
        "libs/react/features/sections/src/index.ts"
      ],
      "@atlascode/utility-assertions": ["libs/shared/assertions/src/index.ts"],
      "@atlascode/utility-browser": ["libs/shared/browser/src/index.ts"],
      "@atlascode/utility-server": ["libs/shared/server/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
